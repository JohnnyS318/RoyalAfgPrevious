<UserControl x:Class="logReader.LogControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:logReader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label Name="LogLevelLabel" Content="{Binding LogLevel, UpdateSourceTrigger=PropertyChanged}" Margin="0"></Label>
        <TextBlock Name="LogContentTextBlock" Text="{Binding LogContent, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock Name="TimestampTextBlock" Text="{Binding LogTimestamp, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"></TextBlock>
    </StackPanel>
</UserControl>
